<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <include
        android:id="@+id/idToolBar"
        layout="@layout/toolbar"
        />




    <Button
        android:id="@+id/idBtnVideos"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/buttons"
        android:onClick="onClickBtnVideos"
        android:layout_centerVertical="true"
        android:text="VÃ­deos"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/idBtnCalendari"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/buttons"
        android:layout_below="@id/idBtnVideos"
        android:layout_marginTop="20dp"
        android:text="Calendari"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/idBtnFormulari"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/buttons"
        android:layout_above="@+id/idBtnVideos"
        android:layout_margin="20dp"
        android:text="Formulari"
        android:textColor="@color/white" />





</RelativeLayout>